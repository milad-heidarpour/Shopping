@model Shopping.Database.Model.Brand

<div>
    <img src="~/Images/Brand/@Model.BrandImg"  width="200"/>
    <h4>BrandName : @Model.BrandEnName</h4>
    <h5>نام برند : @Model.BrandFaName</h5>
    <hr />
    <h4 class="text-danger text-center">آیا حذف  میکنید؟</h4>
    <form asp-area="Admin" asp-controller="Brand" asp-action="DeleteBrand" class="text-center">
        <input asp-for="Id" hidden />
        <button class="btn btn-success">بله <span class="bi bi-check2-circle fa-lg"></span></button>
        <a asp-area="Admin" asp-controller="Brand" asp-action="Index" class="btn btn-danger">خیر <span class=" bi bi-x-circle fa-lg"></span></a>
    </form>
</div>
