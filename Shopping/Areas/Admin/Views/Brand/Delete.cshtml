@model Shopping.Database.Model.Brand

<div>
    <img src="~/Images/Brand/@Model.BrandImg"  width="200"/>
    <h4>BrandName : @Model.BrandEnName</h4>
    <h5>نام برند : @Model.BrandFaName</h5>
    <hr />
    <h4 class="text-danger text-center">آیا حذف  میکنید؟</h4>
    <form asp-controller="brand" asp-action="delete" class="text-center">
        <input asp-for="Id" hidden />
        <button class="btn btn-success">بله</button>
        <a asp-controller="brand" asp-action="index" class="btn btn-outline-danger">خیر</a>
    </form>
</div>
