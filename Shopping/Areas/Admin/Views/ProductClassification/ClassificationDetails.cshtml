@model Shopping.Database.Model.ProductClassification

@{
    ViewData["Title"] = "ClassificationDetails";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>ClassificationDetails</h1>

<div>
    <h4>ProductClassification</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GroupEnName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GroupEnName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GroupFaName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GroupFaName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GroupImg)
        </dt>
        <dd class = "col-sm-10">
            @* @Html.DisplayFor(model => model.GroupImg) *@
            <img src="~/Images/ProductClassification/@Model.GroupImg" width="100"/>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GroupDes)
        </dt>
        <dd class = "col-sm-10">

            @{
                if (Model.GroupDes == null)
                {
                    <h6><span class="fa fa-times text-danger"></span>توضیحاتی وجود ندارد<span class="fa fa-times text-danger"></span></h6>
                }
                @Html.DisplayFor(model => model.GroupDes)
            }
            
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NotShow)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NotShow)
        </dd>
    </dl>
</div>

<partial name="~/Areas/Admin/Views/Commodity/CommodityPartial.cshtml" model="@ViewBag.RelatedCommodity" />

<div>
    <a asp-area="Admin" asp-controller="ProductClassification" asp-action="EditClassificationTitle" asp-route-id="@Model?.Id" class="btn btn-warning"><span class="bi bi bi-pen"></span></a> |
    <a asp-area="Admin" asp-controller="ProductClassification" asp-action="EditClassificationImg" asp-route-id="@Model?.Id" class="btn btn-dark"><span class="bi bi-images"></span></a> |
    <a class="btn btn-dark">نمایش محصولات بیشتر از این دسته</a> |
    <a asp-area="Admin" asp-controller="ProductClassification" asp-action="Index">Back to List</a>
</div>
