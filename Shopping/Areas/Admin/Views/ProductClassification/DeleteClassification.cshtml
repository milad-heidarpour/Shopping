    <h4>BrandName : @Model.GroupEnName</h4>
    <h5>نام برند : @Model.GroupFaName</h5>
    <hr />
    <h4 class="text-danger text-center">آیا حذف  میکنید؟</h4>
    <form asp-controller="productclassification" asp-action="DeleteClassification" class="text-center">
