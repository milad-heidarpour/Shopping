@model Shopping.Database.Model.Feature

@{
    ViewData["Title"] = "AddFeature";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<h1>افزودن ویژگی</h1>

<h4>Feature</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddFeature">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FeatureSectionId" class="control-label"></label>
                <select asp-for="FeatureSectionId" class="form-control" asp-items="ViewBag.FeatureSectionId"><option selected disabled hidden> گروه را انتخاب کنید </option></select>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

