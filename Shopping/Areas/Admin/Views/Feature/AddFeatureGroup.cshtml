@model Shopping.Database.Model.FeatureGroup

@{
    ViewData["Title"] = "AddFeatureGroup";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<h1>افزودن گروه ثبت ویژگی</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="Admin" asp-controller="Feature" asp-action="AddFeatureGroup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GroupName" class="control-label"></label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr style="opacity: 20" class="text-danger " />
<partial name="FeatureGroupsPartial.cshtml" model="@ViewBag.FeatureGroups" />
<hr style="opacity: 20" class="text-danger " />
<partial name="FeaturesChartPartial.cshtml" model="@ViewBag.AllFeatures" />

<hr style="opacity: 20" class="text-danger " />
<div>
    <a asp-action="Index">Back to List</a>
</div>

