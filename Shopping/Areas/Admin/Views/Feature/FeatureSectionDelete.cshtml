@model Shopping.Database.Model.FeatureSection

<div>
    <h5>نام گروه ویژگی : @Model.FeatureGroup.GroupName</h5>
    <h5>نام قسمت ویژگی : @Model.SectionName</h5>
    <hr />
    <h4 class="text-danger text-center">آیا حذف  میکنید؟</h4>
    <form asp-controller="Feature" asp-action="FeatureSectionDelete" class="text-center">
        <input asp-for="Id" hidden />
        <button class="btn btn-success">بله</button>
        <a asp-area="admin" asp-controller="feature" asp-action="GetFeatureSections" class="btn btn-outline-danger">خیر</a>
    </form>
</div>