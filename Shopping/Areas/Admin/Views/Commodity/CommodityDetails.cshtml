@model Shopping.Database.Model.Commodity

@{
    ViewData["Title"] = "CommodityDetails";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>CommodityDetails</h1>

<div>
    <h4>Commodity</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductFaName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductFaName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductEnName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductEnName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductImg)
        </dt>
        <dd class="col-sm-10">
            <img src="~/Images/Commodity/@Model.ProductImg" width="150" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Discount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Discount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inventory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inventory)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Introduction)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Introduction)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NotShow)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NotShow)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RegisterDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegisterDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdateDate)
        </dt>
        <dd class="col-sm-10">
            @{
                if (Model.UpdateDate != null)
                {
                    @Html.DisplayFor(model => model.UpdateDate)
                }
                else
                {
                    <h6 class="text-danger">محصول فعلا بروزرسانی نشده است</h6>
                }
            }

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            <img src="~/Images/Brand/@Model.Brand.BrandImg" width="100" />
            @Html.DisplayFor(model => model.Brand.BrandEnName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Group)
        </dt>
        <dd class="col-sm-10">
            <img src="~/Images/ProductClassification/@Model.Group.GroupImg" width="100" />
            @Html.DisplayFor(model => model.Group.GroupEnName)
        </dd>
    </dl>
</div>
@{
    if (ViewBag.Album != null)
    {
        <partial name="ShowAlbumsPartial.cshtml" model="@ViewBag.Album" />
    }
    else
    {
        <h1 class="text-danger">عکسی برای این محصول وجود ندارد</h1>
    }
}

<div>
    <a asp-area="admin" asp-controller="commodity" asp-action="EditCommodity" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
