@model Shopping.Database.Model.CommodityAlbum

<div>
    <img src="~/Images/commodity/@Model.CommodityImg" width="200" />
    <hr />
    <h4 class="text-danger text-center">آیا حذف  میکنید؟</h4>
    <form asp-controller="commodity" asp-action="RemoveCommodityAlbum" class="text-center">
        <input asp-for="Id" hidden />
        <button class="btn btn-success">بله</button>
        <a asp-controller="commodity" asp-action="AddCommodityAlbum" asp-route-Id="@Model.Commodity.Id" class="btn btn-outline-danger">خیر</a>
    </form>
</div>
