@model Shopping.Core.ViewModels.CompareViewModel

@{
    ViewData["Title"] = "CompareCommodities";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



@{
    <div>
        <h4>Commodity</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Commodity1.ProductFaName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Commodity1.ProductFaName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Commodity1.ProductEnName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Commodity1.ProductEnName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Commodity1.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Commodity1.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Commodity1.Discount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Commodity1.Discount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Commodity1.Inventory)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Commodity1.Inventory)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Commodity1.Introduction)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Commodity1.Introduction)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Commodity1.NotShow)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Commodity1.NotShow)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Commodity1.RegisterDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Commodity1.RegisterDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Commodity1.UpdateDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Commodity1.UpdateDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Commodity1.Brand)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Commodity1.Brand.BrandEnName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Commodity1.Group)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Commodity1.Group.GroupEnName)
            </dd>
        </dl>
    </div>


    if (Model.Commodity2 != null)
    {
        <partial name="GetProduct.cshtml" model="Model.Commodity2" />
    }
    if (Model.Commodity3 != null)
    {
        <partial name="GetProduct.cshtml" model="Model.Commodity3" />
    }
    if (Model.Commodity4 != null)
    {
        <partial name="GetProduct.cshtml" model="Model.Commodity4" />
    }
    <hr />
    if (Model.Commodities.Count() > 0)
    {
        <partial name="GetCompareCommoditiesPartial.cshtml" model="Model.Commodities" />
    }
    else
    {
        <a class="btn btn-danger">محصولاتی از این دسته بندی برای مقایسه وجود ندارد</a>
    }
}



